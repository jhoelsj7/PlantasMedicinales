<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/fondop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Logo con sombra -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/herbs"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:elevation="8dp"
            android:contentDescription="Logo de la aplicación"/>

        <!-- Título con sombra -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Plantas Medicinales"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/white_pure"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginBottom="8dp"/>

        <!-- Subtítulo con sombra -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Identifica plantas con IA"
            android:textSize="16sp"
            android:textColor="@color/white_blue"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginBottom="40dp"/>

        <!-- Contenedor glassmorphism -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_glass_container"
            android:padding="24dp"
            android:elevation="8dp">

            <!-- Input Usuario -->
            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Usuario"
                android:inputType="text"
                android:maxLines="1"
                android:background="@drawable/bg_glass_input"
                android:textColor="@color/white_pure"
                android:textColorHint="@color/glass_white_70"
                android:layout_marginBottom="16dp"/>

            <!-- Input Contraseña -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:maxLines="1"
                android:background="@drawable/bg_glass_input"
                android:textColor="@color/white_pure"
                android:textColorHint="@color/glass_white_70"
                android:layout_marginBottom="24dp"/>

            <!-- Botón Login -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iniciar Sesión"
                android:textColor="@color/white_pure"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/bg_glass_button"
                android:elevation="4dp"
                android:padding="16dp"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>
</ScrollView>